<script>
    // Google Translate Implementation
    function googleTranslateElementInit() {
        new google.translate.TranslateElement({
            pageLanguage: 'en',
            autoDisplay: false,
            includedLanguages: 'ar,zh-CN,en,fr,de,ja,ko,pt,ru,es',
            layout: google.translate.TranslateElement.InlineLayout.SIMPLE
        }, 'google_translate_element');
    }

    // Handle language selection from our custom dropdown
    document.addEventListener('DOMContentLoaded', function() {
        // Get all language dropdown items
        const languageItems = document.querySelectorAll('#google-translate-dropdown .dropdown-item');
        
        // Add click event to each language option
        languageItems.forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                const lang = this.getAttribute('data-lang');
                
                // Update the selected language flag
                const flagImg = this.querySelector('img').src;
                document.getElementById('selected-language-flag').src = flagImg;
                
                // Trigger Google Translate
                if (lang === 'en') {
                    // For English, we reset to original
                    const googleSelect = document.querySelector('.goog-te-combo');
                    if (googleSelect) {
                        googleSelect.value = '';
                        googleSelect.dispatchEvent(new Event('change'));
                    } else {
                        // If Google Translate not yet loaded, reload the page
                        location.reload();
                    }
                } else {
                    // For other languages, use Google translate
                    const googleDiv = document.querySelector('.goog-te-combo');
                    if (googleDiv) {
                        googleDiv.value = lang;
                        googleDiv.dispatchEvent(new Event('change'));
                    } else {
                        // If Google Translate not loaded yet, load script
                        loadGoogleTranslate();
                        // And try again after a short delay
                        setTimeout(() => {
                            const retrySelect = document.querySelector('.goog-te-combo');
                            if (retrySelect) {
                                retrySelect.value = lang;
                                retrySelect.dispatchEvent(new Event('change'));
                            }
                        }, 1000);
                    }
                }
            });
        });
        
        // Initial load of Google Translate script
        loadGoogleTranslate();
    });
    
    // Function to load Google Translate script
    function loadGoogleTranslate() {
        if (!window.google || !window.google.translate) {
            const script = document.createElement('script');
            script.src = '//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit';
            document.head.appendChild(script);
        }
    }

    // Fetch member count from API
    document.addEventListener('DOMContentLoaded', function() {
        fetchMemberCount();
    });
    
    async function fetchMemberCount() {
        try {
            const response = await fetch('/api/member-count');
            const data = await response.json();
            
            // Update member counter with actual count
            const memberCountElement = document.getElementById('member-counter');
            if (memberCountElement) {
                memberCountElement.textContent = data.count.toLocaleString();
                
                // Add animation effect
                memberCountElement.classList.add('counter-highlight');
                setTimeout(() => {
                    memberCountElement.classList.remove('counter-highlight');
                }, 1500);
            }
        } catch (error) {
            console.error('Error fetching member count:', error);
            // Fallback if there's an error
            const memberCountElement = document.getElementById('member-counter');
            if (memberCountElement) {
                memberCountElement.textContent = 'Join Today!';
            }
        }
    }
</script>
